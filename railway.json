{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK", 
    "buildCommand": "python -m venv /app/.venv && ln -sf /app/.venv /app/venv39 && /app/.venv/bin/pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "/app/.venv/bin/python bot.py"
  }
}